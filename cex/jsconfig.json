{
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "checkJs": true,
    "jsx": "react-jsx",
    "types": ["vite/client"]
  },
  "include": [
    "public",
    "./src/**/*.js",
    "./src/**/*.jsx",
    "./tests/**/*.js",
    "./tests/**/*.jsx"
  ],
  "exclude": ["node_modules", "**/node_modules/*"]
}
